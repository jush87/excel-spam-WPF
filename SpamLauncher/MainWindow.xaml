<Window x:Class="SpamLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpamLauncher"
        mc:Ignorable="d"
        Title="Spam Launcher" Height="600" Width="550">
    <Grid Margin="0,0,0,-21">
        <UniformGrid Columns="1" Margin="0,0,0,27">
            <Button Content="Générer E-mail" Click="Button_Click"></Button>
            <Button Content="Envoyer E-mail" Click="Button_Click_1"></Button>
            <GroupBox Header="Adresse">
                <TextBox x:Name="TextAdresse"/>
            </GroupBox>
            <GroupBox Header="Message">
                <TextBox x:Name="TextMessage"/>
            </GroupBox>
            <Button Content="Spam" Click="Button_Click_2"></Button>
        </UniformGrid>
    </Grid>
</Window>
