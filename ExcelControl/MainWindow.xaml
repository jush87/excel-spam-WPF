<Window x:Class="ExcelControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <GroupBox Header="Action excel">
            <UniformGrid Columns="1">
                <Button Content="Lance Excel" Foreground="AntiqueWhite" Background="Green" Click="Button_Click"></Button>
                <Button Content="Ferme Excel" Background="Blue" Click="Button_Click_1"></Button>
                <Button Content="Traitement" Background="Red" Click="Button_Click_2"></Button>
                <Button Content="Couleur" Background="GreenYellow" Click="Button_Click_3"></Button>
                <Button Content="Multiplication" Background="Goldenrod" Click="Button_Click_4"></Button>
                <Button Content="Ferme l'application" Background="BlueViolet" Click="Button_Click_5"></Button>
            </UniformGrid>
        </GroupBox>
    </Grid>
</Window>
